<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="My.Theme" parent="@style/Theme.Sherlock">
		<item name="actionBarStyle">@style/My.Widget.ActionBar</item>
		<item name="android:actionBarStyle">@style/My.Widget.ActionBar</item>
        <item name="actionBarTabStyle">@style/My.Widget.ActionBar.TabView</item>
        <item name="android:actionBarTabStyle">@style/My.Widget.ActionBar.TabView</item>
        <item name="actionBarTabBarStyle">@style/Widget.Sherlock.ActionBar.TabBar</item>
        <item name="actionModeStyle">@style/My.Widget.ActionMode</item>
		<item name="android:actionModeStyle">@style/My.Widget.ActionMode</item>

		<item name="android:spinnerStyle">@style/My.Widget.Spinner</item>
		<item name="android:checkboxStyle">@style/My.Widget.CompoundButton.CheckBox</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListViewStyle</item>
        <item name="android:progressBarStyleHorizontal">@style/My.ProgressBar.Horizontal</item>
        <item name="android:alertDialogTheme">@style/My.Theme.Dialog</item>


        <item name="android:editTextStyle">@style/EditTextTeal</item>

        <item name="android:textColorHighlight">#9919a99b</item>

        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewTeal</item>

        <item name="android:checkboxStyle">@style/CheckBoxTeal</item>

        <item name="android:radioButtonStyle">@style/RadioButtonTeal</item>

        <item name="android:buttonStyle">@style/ButtonTeal</item>

        <item name="android:imageButtonStyle">@style/ImageButtonTeal</item>

        <item name="android:spinnerStyle">@style/SpinnerTeal</item>

        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemTeal</item>

        <item name="android:buttonStyleToggle">@style/ToggleTeal</item>

        <item name="android:listViewStyle">@style/ListViewTeal</item>

        <item name="android:listViewWhiteStyle">@style/ListViewTeal.White</item>

        <item name="android:spinnerItemStyle">@style/SpinnerItemTeal</item>

	</style>



	<style name="My.Theme.Fullscreen" parent="@android:style/Theme.NoTitleBar.Fullscreen" />

	<style name="My.Theme.Dialog" parent="My.Theme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@style/My.Theme.Dialog.TitleStyle</item>
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="My.Theme.Dialog.TitleStyle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:textColor">@color/knc_highlight</item>
    </style>

	<style name="My.Widget.ActionBar" parent="@style/Widget.Sherlock.ActionBar.Solid">
		<item name="background">@drawable/action_bar_background</item>
		<item name="android:background">@drawable/action_bar_background</item>
		<item name="titleTextStyle">@style/My.TextAppearance.Widget.ActionBar.Title</item>
		<item name="android:titleTextStyle">@style/My.TextAppearance.Widget.ActionBar.Title</item>
		<item name="subtitleTextStyle">@style/My.TextAppearance.Widget.ActionBar.Subtitle</item>
		<item name="android:subtitleTextStyle">@style/My.TextAppearance.Widget.ActionBar.Subtitle</item>

	</style>
    <style name="My.Widget.Sherlock.ActionBar.TabBar" parent="Widget.Sherlock.ActionBar.TabBar">0
        <item name="android:divider">?attr/actionBarDivider</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerPadding">102dip</item>
    </style>

    <style name="My.Widget.ActionBar.TabView" parent="Widget.Sherlock.ActionBar.TabView">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/tab_indicator_ab_teal</item>
        <item name="android:paddingLeft">32dip</item>
        <item name="android:paddingRight">32dip</item>
    </style>

	<style name="My.TextAppearance.Widget.ActionBar.Title" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowColor">@android:color/black</item>
		<item name="android:shadowRadius">1</item>
	</style>

	<style name="My.TextAppearance.Widget.ActionBar.Subtitle" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Subtitle">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textStyle">normal</item>
	</style>

	<style name="My.Widget.ActionMode" parent="@style/Widget.Sherlock.ActionMode">
		<item name="background">@drawable/action_mode_background</item>
		<item name="android:background">@color/knc_highlight</item>
		<item name="titleTextStyle">@style/My.TextAppearance.Widget.ActionMode.Title</item>
		<item name="android:titleTextStyle">@style/My.TextAppearance.Widget.ActionMode.Title</item>
		<item name="subtitleTextStyle">@style/My.TextAppearance.Widget.ActionMode.Subtitle</item>
		<item name="android:subtitleTextStyle">@style/My.TextAppearance.Widget.ActionMode.Subtitle</item>
	</style>

	<style name="My.TextAppearance.Widget.ActionMode.Title" parent="@style/TextAppearance.Sherlock.Widget.ActionMode.Title">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowColor">@android:color/black</item>
		<item name="android:shadowRadius">1</item>
	</style>

	<style name="My.TextAppearance.Widget.ActionMode.Subtitle" parent="@style/TextAppearance.Sherlock.Widget.ActionMode.Subtitle">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textStyle">normal</item>
	</style>

	<style name="My.Widget.Spinner" parent="@android:style/Widget.Spinner">
		<item name="android:background">@drawable/spinner_background</item>
	</style>

	<style name="My.Widget.CompoundButton.CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
		<item name="android:button">@drawable/btn_check</item>
		<item name="android:paddingLeft">42dp</item>
	</style>

	<style name="My.Widget.Button.Borderless" parent="@android:style/Widget">
		<item name="android:background">@android:drawable/list_selector_background</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:drawablePadding">8dp</item>
		<item name="android:minHeight">48dp</item>
	</style>

    <style name="DropDownListViewStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/knc_header_line</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">@color/knc_background_lighter</item>
        <item name="android:textColor">#fff</item>
        <item name="android:listSelector">@color/knc_background_darker</item>
    </style>

    <style name="My.ProgressBar.Horizontal" parent="android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_teal</item>
        <item name="android:indeterminateDrawable">@drawable/progress_horizontal_indeterminate_teal</item>
    </style>



</resources>