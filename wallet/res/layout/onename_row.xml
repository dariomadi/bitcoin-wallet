<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/knc_background_darker"
    android:paddingBottom="@dimen/list_entry_padding_vertical"
    android:paddingLeft="@dimen/list_entry_padding_horizontal"
    android:paddingRight="@dimen/list_entry_padding_horizontal"
    android:paddingTop="@dimen/list_entry_padding_vertical"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/onename_searching"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminateOnly="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/onename_status"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="searching"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/onename_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.loopj.android.image.SmartImageView
                android:id="@+id/onename_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/contact_placeholder" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/onename_image_progress"
                android:layout_centerInParent="true"
                 />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="4dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/onename_user_name"
                android:textSize="@dimen/font_size_normal"
                android:textColor="@color/knc_highlight"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/onename_user_address"
                android:textColor="@color/knc_header_text"
                android:textSize="@dimen/font_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>


    </LinearLayout>


    <Button
        android:background="@null"
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>